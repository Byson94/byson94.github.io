---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
<Header />

<style>
  body {
    background: linear-gradient(var(--background-color));
  }
  h1, p {
    color: var(--text-color);
  }
</style>

<main class="max-w-xl mx-auto px-4 py-8">
  <div class="flex flex-col items-center space-y-4 mt-6 text-left">
	<h1 class="text-center text-2xl font-bold mt-4">OWWW! Page not Found!</h1>

	<p class="mt-2">Seems like the page that you were looking for was not found.</p>
  </div>
</main>
