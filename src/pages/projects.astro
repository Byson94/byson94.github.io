---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).sort(
	(a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			/* ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			} */
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				line-height: 1;
			}
			.dark .title {
				color: rgb(var(--text-color-light));
			}
            .description {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.dark .description {
				color: rgb(var(--text-color-light));
			}
			.tags {
				margin: 0;
				color: rgb(var(--light-color));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
            .arrow {
                opacity: 0;
                transform: translateX(-4px);
                transition: opacity 0.3s ease, transform 0.3s ease;
            }
            .card {
                outline: 2px solid rgb(172, 172, 172);
                padding: 10px;
                border-radius: 10px;
                transition: 2s;
            }
			.card > * + * {
				margin-top: 0.75rem;
			}
            .card:hover {
                transform: scale(1.008);
            }
            .card:hover .arrow {
                opacity: 1;
                transform: translateX(0);
            }

			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						projects.map((project) => (
							<li>
								<a class="card" href={`${project.data.link}`}>
									<h4 class="title">
                                        {project.data.title} 
                                        <span class="arrow">â†’</span>
                                    </h4>
                                    <p class="description">{project.data.description}</p>
                                    {project.data.tags && project.data.tags.length > 0 && (
                                    <div class="tags flex flex-wrap gap-2 mt-2">
                                        {project.data.tags.map(tag => (
                                        <span class="inline-block bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 text-xs font-medium px-3 py-1 rounded-full shadow-sm">
                                            #{tag}
                                        </span>
                                        ))}
                                    </div>
                                    )}

								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
